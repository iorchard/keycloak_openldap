LDAP_ORGANISATION: "{{ ldap_env.org }}"
LDAP_DOMAIN: "{{ ldap_env.domain }}"
LDAP_BASE_DN: "{{ ldap_env.basedn }}"
LDAP_ADMIN_PASSWORD: "{{ ldap_password }}"
LDAP_CONFIG_PASSWORD: "{{ ldap_password }}"
CFSSL_DEFAULT_CA_CSR_ORGANIZATION: "{{ ldap_env.cfssl_org }}"
CFSSL_DEFAULT_CA_CSR_ORGANIZATION_UNIT: "{{ ldap_env.cfssl_ou }}"
CFSSL_DEFAULT_CA_CSR_LOCATION: "{{ ldap_env.cfssl_loc }}"
CFSSL_DEFAULT_CA_CSR_STATE: "{{ ldap_env.cfssl_state }}"
CFSSL_DEFAULT_CA_CSR_COUNTRY: "{{ ldap_env.cfssl_country }}"
CFSSL_DEFAULT_CA_CSR_CN: "openldap"

#
# Do not edit below if you do not know what it means.
#
LDAP_LOG_LEVEL: "256"
LDAP_READONLY_USER: "false"
LDAP_READONLY_USER_USERNAME: "readonly"
LDAP_READONLY_USER_PASSWORD: "readonly"
LDAP_RFC2307BIS_SCHEMA: "false"
LDAP_BACKEND: "mdb"
LDAP_TLS: "true"
LDAP_TLS_CRT_FILENAME: "tls.crt"
LDAP_TLS_KEY_FILENAME: "tls.key"
LDAP_TLS_DH_PARAM_FILENAME: "dhparam.pem"
LDAP_TLS_CA_CRT_FILENAME: "ca.crt"
LDAP_TLS_ENFORCE: "false"
LDAP_TLS_VERIFY_CLIENT: "never"
LDAP_REPLICATION: "true"
LDAP_REPLICATION_HOSTS:
{% for s in groups['all'] %}
  - ldap://{{ s }}
{% endfor %}
KEEP_EXISTING_CONFIG: "false"
LDAP_REMOVE_CONFIG_AFTER_SETUP: "true"
LDAP_SSL_HELPER_PREFIX: "ldap"
LDAP_BIND_ALL_IFACE: "false"
